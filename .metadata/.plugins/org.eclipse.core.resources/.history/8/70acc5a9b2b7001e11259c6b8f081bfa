package com.coffeeManagementSystem.coffeeManagementSystem;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.context.event.ApplicationReadyEvent;
import org.springframework.context.event.EventListener;

@SpringBootApplication
public class SendMailApplicaton {
 	@Autowired
	private sendEmail senderService;
	public static void main(String[] args) {
		SpringApplication.run(SendMailApplicaton.class, args);
	}
	@EventListener(ApplicationReadyEvent.class) 
	public void sendmail(){
		senderService.send(SignUpView.emailAdd, "Email Verification",Integer.toString(SignUpView.otp));
	}

}
